<div class="container">
  <div class="newuser-form">
    <h4 style="text-align: center; color:#5ea3d1">Let's Get Started!</h4>
    <form class="signup">
      <div class="form-group">
        <input type="email" class="form-control" id="new-email" placeholder="Email">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" id="new-password" placeholder="Password">
      </div>
      <br>
      <button class="btn waves-effect waves-light" type="submit" id="new-user">Sign Up
        <i class="material-icons right">send</i>
      </button>

    </form>
    <br />
    <hr>
    <p>Or Log-in
      <a href="/">here</a>
    </p>
  </div>

</div>

