<h5>Tell Us About Your Dog</h5>

<div class="container">
    <h5>Dog Profile</h5>

    <section class="form">

        <form id="sign-up">
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="owner_name" type="text" class="validate">
                    <label for="owner_name">Owner Name</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">pets</i>
                    <input id="dog_name" type="text" class="validate">
                    <label for="dog_name">Dog Name</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input disabled value="Size of Dog" id="dog_size" type="text" class="validate">
                    <label for="dog_size"></label>
                </div>
                <p>
                    <label>
                        <input name="group1" type="radio" value="small" />
                        <span>Small</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input name="group1" type="radio" value="medium" />
                        <span>Medium</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input name="group1" type="radio" value="large" />
                        <span>Large</span>
                    </label>
                </p>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="URL" id="dog_pic" type="text" class="validate">
                    <label for="dog_pic">Dog photo</label>
                </div>
            </div>


            <div class="row">
                <div class="input-field col s6">
                    <input disabled value="" id="personality" type="text" class="validate">
                    <label for="personality">Personality</label>
                    <p>
                        <label>
                            <input name="group2" type="radio" value="confident" />
                            <span>Confident</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="group2" type="radio" value="timid" />
                            <span>Timid</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="group2" type="radio" value="independent" />
                            <span>Independent</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="group2" type="radio" value="laid-back" />
                            <span>Laid-back</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="group2" type="radio" value="adaptable" />
                            <span>Adaptable</span>
                        </label>
                    </p>
                </div>

                <div class="input-field col s6">
                    <input disabled value="" id="activity_level" type="text" class="validate">
                    <label for="activity_level">Activity Level</label>
                    <p>
                        <label>
                            <input name="group3" type="radio" value="sedentary" />
                            <span>Sedentary</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="group3" type="radio" value="moderately-energetic" />
                            <span>Moderately-energetic</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="group3" type="radio" value="hyperactive" />
                            <span>Hyperactive</span>
                        </label>
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col s6">
                    <label>Dog Parks in D.C.</label>
                    <select class="dog_park">
                        <option value="" disabled selected>Favorite Park</option>
                        <option value="Upshur Dog Park">Upshur Dog Park</option>
                        <option value="Colombia Heights Dog Park">Colombia Heights Dog Park</option>
                        <option value="Walter Pierce Park">Walter Pierce Park</option>
                        <option value="Gage Eckington Dog Park">Gage Eckington Dog Park</option>
                        <option value="S Street Dog Park">S Street Dog Park</option>
                        <option value="Shaw Dog Park">Shaw Dog Park</option>
                        <option value="Mitchell Park">Mitchell Park</option>
                        <option value="Francis Dog Park">Francis Dog Park</option>
                        <option value="Rosedale Conservancy">Rosedale Conservancy</option>
                        <option value="Newark Street Dog Park">Newark Street Dog Park</option>
                        <option value="Langdon Dog Park">Langdon Dog Park</option>
                        <option value="Kingsman Dog Park">Kingsman Dog Park</option>
                        <option value="Virginia Avenue Park">Virginia Avenue Park</option>
                        <option value="Garfield Park">Garfield Park</option>
                        <option value="Canal Park">Canal Park</option>          
                    </select>
                </div>

                <div class="input-field col s6">
                    <input placeholder="Time" id="park_time" type="text" class="validate">
                    <label for="park_time">Preferred Play Time</label>
                </div>
                <button class="btn waves-effect waves-light" id="form_submit" type="submit" name="action">Create a Profile
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </section>
</div>
